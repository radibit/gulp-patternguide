
html
  height 100.0001%

body
  height 100%
  min-height 100%

.sg-content-container

  &.is-single
    height 100%

  & + .sg-content-container
    margin-top 40px

  .sg-content
    position relative
    display block
    height 100%

.sg-content-headline
  color #7d7d7d
  text-transform uppercase
  font-size 1.2em
  line-height 27px
  height 27px
  margin 1em 10px
  border-bottom 1px solid #7d7d7d
  overflow hidden
  span
    text-transform none
    white-space nowrap
    font-size .65em
    float right
  a
    color inherit
    text-decoration none;

.sg-content-sub-headline
  font-weight 700
  text-transform uppercase
  font-size 1.3em
  margin 1.5em 0 .25em
  span
    text-transform none

  &:first-child
    margin-top .25em

.sg-content > .sg-content-sub-headline
  margin 0 10px

.sg-content-label
  font-style italic
  opacity .3